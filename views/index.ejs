<!DOCTYPE html>
<html lang="pt-Br">
  <%- include('partials/header.ejs') %>
  <%- include('partials/homenavbar.ejs') %>
<body>
  <hr/>
  <div class="container">
      <div class="jumbotron">
        <h1 class="display-4">Bem-vindo!</h1>
        <p class="lead">Simples blog feito durante a formação nodejs guia do programador</p>
        <hr class="my-4">
        <p>Descrição detalhada aqui</p>
        <p class="lead">
          <a class="btn btn-primary btn-lg" href="#" role="button">Ler mais</a>
        </p>
      </div>
    <hr/>
    <% articles.forEach(( article ) =>{ %>
    <div class="card">
        <div class="card-header">
          <h2><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
        </div>
      </div><br>
    <% }) %>
    <div class="row">
      <div class="col col-12">
        <a style="float: right;" href="/articles/page/2">Next >>></a>
      </div>
    </div>
  <hr>
  </div>
  <%- include('partials/footer.ejs') %>
</body>
</html>