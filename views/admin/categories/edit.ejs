<%- include('../../partials/header.ejs') %>
<%- include('../../partials/nav.ejs') %>  

<div class="container">
  <hr>
  <div class="card">
    <div class="card-header">
      <h2>Edição de categoria</h2>
    </div>
    <div class="card-body">
      <form action="/categories/update" method="POST">
        <input class="form-control" type="text" name="title" placeholder="Defina o titulo do artigo" value="<%= category.title %>"><br>
        <input type="hidden" name="id" value="<%= category.id %>">
        <button class="btn btn-success btn-sm">Atualizar</button>
      </form>
    </div>
  </div>
  
</div>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector:'#article',
        language:'pt_BR'
    });
</script>
